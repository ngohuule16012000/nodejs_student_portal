<div class="container col-12 mt-3">
    {{#if flash }}
      <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
          <div class="col-lg-9 m-4">
              <div class="alert alert-{{flash.type}} alert-dismissible fade show">
                <strong></strong><span>{{flash.message}}</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
          </div>
        </div>
      </div>
    {{/if}}
    <div class='card text-black' style='border-radius: 25px;'>
          <div class='card-body p-md-5'>
            <div class='row justify-content-center'>
              <div class='col-sm-3 col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1'>
                <p class='text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4'>
                  Thêm phòng ban
                </p>
                <!-- form -->
                <form class='mx-1 mx-md-4' method='POST' action='/admin/department?_method=PUT'>

                  <label for="type" class="form-label"><h4>Loại icon</h4></label>
                  <div class='d-flex flex-row align-items-center mb-4 border rounded bg-light'>
                    <i class='fa fa-smile fa-lg me-3 fa-fw mx-2'></i>
                    <div class='form-outline flex-fill mb-0 '>
                      <select class="form-select" id="type" name="type" required>
                        <option value="feel">
                          Cảm xúc
                        </option>
                        <option value="action">
                          Hành động
                        </option>
                      </select>
                    </div>
                  </div>

                  <label for="name" class="form-label"><h4>Tên icon</h4></label>
                  <div class='d-flex flex-row align-items-center mb-4 border rounded bg-light'>
                    <i class='fas fa-pencil-alt fa-lg me-3 fa-fw mx-2'></i>
                    <div class='form-outline flex-fill mb-0'>
                      <input type='text' id='name' class='form-control' name='name' required/>
                    </div>
                  </div>
                  
                  <label for="link" class="form-label"><h4>Link icon</h4></label>
                  <div class='d-flex flex-row align-items-center mb-4 border rounded bg-light'>
                    <i class='fas fa-link fa-lg me-3 fa-fw mx-2'></i>
                    <div class='form-outline flex-fill mb-0'>
                      <input type='text' id='link' class='form-control' name='link' required/>
                    </div>
                  </div>
                  
                  <div class='d-flex justify-content-center mx-4 mb-3 mb-lg-4'>
                    <button type='submit' type='button' class='btn btn-primary btn-lg'>
                        Thêm icon ngay
                    </button>
                  </div>

                </form>
                <!-- end form -->
              </div>
              <div class='col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2'>
                <img
                  src='https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp'
                  class='img-fluid'
                  alt='Sample image'
                />
              </div>
            </div>
          </div>
        </div>
</div>