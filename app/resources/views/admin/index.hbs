<div class="row col-12">
  <div class="col-9">
    <div class="container col-9">
    <div class="row justify-content-center">
    <div class="card my-3 " style='border-radius: 10px ;'>
      <div class="card-body d-flex mt-2">
        <a href="">
          <img width="58" height="58" class="rounded-circle me-2" src='{{img}}'/>
        </a>
        <button type="button" class="form-control text-secondary border-light text-start rounded-pill postmess fs-4 option1" data-bs-toggle="modal" data-bs-target="#postmess">
          Bạn đang nghĩ gì thế?
        </button>
      </div>
      <div class="card-body d-flex border-top">
        <button class="mx-1 d-flex justify-content-center align-items-center form-control text-secondary rounded border-light options" data-bs-toggle="modal" data-bs-target="#video">
          <img width="30" height="30" src="https://img.icons8.com/external-prettycons-flat-prettycons/47/undefined/external-video-social-media-prettycons-flat-prettycons.png"/>
          <h5 class="ps-1 pt-1">Video</h5>
        </button>
        <button class="mx-1 d-flex justify-content-center align-items-center form-control text-secondary rounded border-light options" data-bs-toggle="modal" data-bs-target="#image">
          <img width="30" height="30" src="https://img.icons8.com/fluency/48/undefined/image-gallery.png"/>
          <h5 class="ps-1 pt-1">Ảnh</h5>
        </button>
        <button class="mx-1 d-flex justify-content-center align-items-center form-control text-secondary rounded border-light options" data-bs-toggle="modal" data-bs-target="#feel">
          <img width="30" height="30" src="https://img.icons8.com/color-glass/48/undefined/happy.png"/>
          <h5 class="ps-1 pt-1">Cảm xúc/Hoạt động</h5>
        </button>
      </div>
    </div>

